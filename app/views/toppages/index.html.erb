<% if logged_in? %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>最近追加された水族館</h1>
      <!--ここに水族館の一覧を表示させる-->
    </div>
    <div class="text-left">
        <div class="list-group">
          <%  @aquarias.each do |aquaria| %>
            <a data-turbolinks="false" href="/aquarias/<%= aquaria.id %>" class="list-group-item">
              <%= aquaria.facility %>
            </a>
          <% end %>
        </div>
    </div>
  </div>
    
