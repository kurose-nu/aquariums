<% if logged_in? %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>水族館一覧</h1>
    </div>
    <div class="text-left">
        <div class="list-group">
          <%  @aquarias.each do |aquaria| %>
            <a href="/aquarias/<%= aquaria.id %>" class="list-group-item">
              <%= aquaria.facility %>
            </a>
          <% end %>
        </div>
    </div>
  </div>
    <div class="text-center">
      <%= link_to '水族館登録', new_aquaria_path, class: 'btn btn-sm btn-info' %>
    </div>
  </div>
<% else %>
  <div class="text-center">
    <h1>水族館一覧</h1>
  </div>
  <div class="text-left">
      <div class="list-group">
        <%  @aquarias.each do |aquaria| %>
          <a href="/aquarias/<%= aquaria.id %>" class="list-group-item">
            <%= aquaria.facility %>
          </a>
        <% end %>
      </div>
  </div>
<% end %>